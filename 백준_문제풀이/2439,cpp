#include <iostream>
using namespace std;
/*
별찍기 2
: 첫번째 줄 별 1개 두번째 줄 별 2개...
오른쪽 기준으로 정렬
*/
int main(void)
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        for(int k=n-i;k>0;k--)
            cout<<" ";
        for(int j=1;j<=i;j++)
        {   
            cout<<"*";
        }
        cout<<"\n";
    }
}
